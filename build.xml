            }
            function changePropelDebugMode(){
                $content = file_get_contents($this->target."/application/modules/shop/classes/ShopCore.php");
		        $content = str_replace("define('PropelDebugMode', TRUE);", "define('PropelDebugMode', FALSE);", $content);
		        $content = str_replace("define('PropelDebugMode', true);", "define('PropelDebugMode', false);", $content);
