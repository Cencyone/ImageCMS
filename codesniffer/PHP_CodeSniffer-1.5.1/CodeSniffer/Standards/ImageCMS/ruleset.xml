<?xml version="1.0"?>
<ruleset name="ImageCMS">
    <description>The ImageCMS coding standard builds.</description>

<!--    <exclude-pattern>*/application/*</exclude-pattern>
    <exclude-pattern>*\application\*</exclude-pattern> -->
    <exclude-pattern>*/codesniffer/*</exclude-pattern>
    <exclude-pattern>*\codesniffer\*</exclude-pattern>
    <exclude-pattern>*/docs/*</exclude-pattern>
    <exclude-pattern>*\docs\*</exclude-pattern>
    <exclude-pattern>*/js/*</exclude-pattern>
    <exclude-pattern>*\js\*</exclude-pattern>
    <exclude-pattern>*/system/*</exclude-pattern>
    <exclude-pattern>*\system\*</exclude-pattern>
    <exclude-pattern>*/templates/*</exclude-pattern>
    <exclude-pattern>*\templates\*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*\tests\*</exclude-pattern>
    <exclude-pattern>*/uploads/*</exclude-pattern>
    <exclude-pattern>*\uploads\*</exclude-pattern>
    <exclude-pattern>*/uploads_site/*</exclude-pattern>
    <exclude-pattern>*\uploads_site\*</exclude-pattern>
    
<!--     <rule ref="ImageCMS.NamingConventions.CamelCapsFunctionName"/>  -->
    <rule ref="ImageCMS.NamingConventions.UpperCaseConstantName"/>
    <rule ref="ImageCMS.Commenting.FunctionComment"/>

</ruleset>
