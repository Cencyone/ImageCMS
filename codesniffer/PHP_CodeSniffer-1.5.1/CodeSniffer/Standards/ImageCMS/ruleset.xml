<?xml version="1.0"?>
<ruleset name="ImageCMS">
    <description>The ImageCMS coding standard builds.</description>

    <exclude-pattern>*/Tests/*</exclude-pattern>
    <exclude-pattern>*/Oven/*</exclude-pattern>
    <exclude-pattern>*/data/*</exclude-pattern>
    <exclude-pattern>*/jquery.js</exclude-pattern>
    <exclude-pattern>*/jquery.*.js</exclude-pattern>
    <exclude-pattern>*/viper/*</exclude-pattern>
    <exclude-pattern>DALConf.inc</exclude-pattern>
    
    <rule ref="ImageCMS.NamingConventions.CamelCapsFunctionName"/>
    <rule ref="ImageCMS.NamingConventions.UpperCaseConstantName"/>
    <rule ref="ImageCMS.Commenting.FunctionComment"/>

</ruleset>
